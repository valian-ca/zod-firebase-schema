{
  "name": "zod-firebase-schema",
  "private": true,
  "description": "zod firebase schema",
  "author": {
    "name": "Valian",
    "url": "https://valian.ca",
    "organization": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valian-ca/zod-firebase-schema.git"
  },
  "keywords": [
    "zod",
    "firebase",
    "firebase-admin"
  ],
  "version": "1.4.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "eslint": "eslint .",
    "prettier": "prettier --check .",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "lint:publint": "nx run-many --target lint:publint",
    "prepare": "husky",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "type-check": "nx run-many -t type-check",
    "test:integration:ci": "nx run-many -t test:integration:ci --parallel=false"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@lerna-lite/cli": "4.9.1",
    "@lerna-lite/publish": "4.9.1",
    "@nx/eslint": "22.0.1",
    "@nx/js": "22.0.1",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.13.5",
    "@swc/helpers": "0.5.17",
    "@tsconfig/node22": "22.0.2",
    "@valian/eslint-config": "1.6.1",
    "@vitest/coverage-v8": "4.0.4",
    "@vitest/eslint-plugin": "1.3.25",
    "eslint": "9.38.0",
    "firebase-functions-test": "3.4.1",
    "firebase-tools": "14.22.0",
    "husky": "9.1.7",
    "markdownlint-cli2": "0.18.1",
    "nx": "22.0.1",
    "prettier": "3.6.2",
    "publint": "0.3.15",
    "ts-essentials": "10.1.1",
    "tsdown": "0.15.10",
    "typescript": "5.9.3",
    "vitest": "4.0.4",
    "zod": "4.1.12"
  },
  "engines": {
    "node": ">= 22.0.0"
  },
  "packageManager": "pnpm@10.14.0"
